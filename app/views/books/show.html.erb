<h1><%= @book.title %></h1>

<h2>By: <%= @book.author %></h2>
<h3>Genre: <%= @book.genre.name %></h2>

<h4> Average Rating: <%= @book.average %></h4>
<h4>Reviews for <%= @book.title %>: </h4>

<% @book.reviews.each do |r| %>
    <ul>
        <li><%= link_to r.title, review_path(r) %> - <%= r.rating %> Stars
    </ul>
<% end %>

<%= link_to "Review this book", new_book_review_path(@book.id) %>


