<%= form_for(@review) do |f| %>
   <%= book_id_field(@review) %><br>


    <div>
    <%= f.label :rating %>
    <%= f.number_field :rating, min:0, max:5 %>
    </div>

    <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>

    <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
    </div>


    <%= f.submit "Submit" %>
<% end %>