<h1><%= @review.book.title %> by <%= @review.book.author %></h1>

<h2><%= @review.title%> - <%= @review.rating%> Stars</h2>

<h3><i>Review by <%= link_to @review.user.username, user_path(@review.user) %></i></h3>

<p><%= @review.content%></p>

<% if @review.user_id == current_user.id %> 
<%= link_to 'Edit', edit_review_path(@review), {method:'get'} %>
  <%= link_to 'Delete', review_path(@review), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %> 